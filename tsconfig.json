{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@pages": ["app/pages"],
      "@shared/*": ["app/shared/*"],
      "@enums": ["app/shared/enums"],
      "@models": ["app/shared/models"],
      "@services": ["app/shared/services"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false
}
