{
  "compilerOptions": {
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["app/pages/*"],
      "@shared/*": ["app/shared/*"],
      "@interface": ["app/shared/interface"],
      "@model": ["app/shared/model"],
      "@service": ["app/shared/service"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
