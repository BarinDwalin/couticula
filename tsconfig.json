{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@pages": ["app/pages"],
      "@shared/*": ["app/shared/*"],
      "@db": ["app/core/db"],
      "@enums": ["app/core/enums"],
      "@fabrics": ["app/core/fabrics"],
      "@models": ["app/core/models"],
      "@services": ["app/core/services"]
    }
  },
  "compileOnSave": false
}
